{
  "name": "@icazemier/gibbons-mongodb",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "description": "Gibbons is a Node.js module which helps in managing user groups and user permissions with `bitwise` efficiency.",
  "contributors": [
    {
      "name": "Ivo Cazemier",
      "email": "git@warmemelk.nl",
      "url": "https://github.com/icazemier"
    }
  ],
  "keywords": [
    "user permissions",
    "user groups",
    "bitwise",
    "MongoDB",
    "NoSQL",
    "cli"
  ],
  "files": [
    "build/"
  ],
  "bin": {
    "@icazemier/gibbons-mongodb": "./build/esm/bin/cli.js",
    "gibbons-mongodb": "./build/esm/bin/cli.js"
  },
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    }
  },
  "types": "./build/esm/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "scripts": {
    "test": "cross-env NODE_ENV=test vitest run --coverage",
    "build:esm": "tsc -p tsconfig-build-esm.json",
    "build:cjs": "tsc -p tsconfig-build-cjs.json",
    "build": "rimraf build && npm run build:esm && npm run build:cjs && npm run fixup",
    "fixup": "node ./fixup.mjs",
    "clean:build": "rimraf build",
    "clean:docs": "rimraf docs",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "husky",
    "commit": "git-cz",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/icazemier/gibbons-mongodb"
  },
  "homepage": "https://github.com/icazemier/gibbons-mongodb#readme",
  "bugs": {
    "url": "https://github.com/icazemier/gibbons-mongodb/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "mongodb": "^6.0.0"
  },
  "dependencies": {
    "@icazemier/gibbons": "^5.0.4",
    "cosmiconfig": "^9.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.15.15",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^3.1.2",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.3.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "mongodb": "^6.16.0",
    "mongodb-memory-server": "^10.1.4",
    "noop-stream": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.3",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
