{
  "name": "@icazemier/gibbons-mongodb",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "description": "Gibbons is a Node.js module which helps in managing user groups and user permissions with `bitwise` effiency.",
  "contributors": [
    {
      "name": "Ivo Cazemier",
      "email": "git@warmemelk.nl",
      "url": "https://github.com/icazemier"
    }
  ],
  "keywords": [
    "user permissions",
    "user groups",
    "bitwise",
    "MongoDB",
    "NoSQL",
    "cli"
  ],
  "files": [
    "build/"
  ],
  "bin": {
    "@icazemier/gibbons-mongodb": "./build/esm/bin/cli.js",
    "gibbons-mongodb": "./build/esm/bin/cli.js"
  },
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    }
  },
  "types": "./build/esm/index.d.ts",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "scripts": {
    "test": "c8 mocha --file './test/helper/setup.ts'",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig-cjs.json",
    "build:docs": "typedoc --out docs src/index.ts",
    "fixup": "node ./fixup.mjs",
    "build": "npm-run-all clean:* build:* fixup",
    "clean:build": "rimraf build",
    "clean:docs": "rimraf docs",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/icazemier/gibbons-mongodb"
  },
  "license": "MIT",
  "dependencies": {
    "@icazemier/gibbons": "^5.0.1",
    "cosmiconfig": "^7.0.1",
    "eslint": "^8.3.0",
    "mongodb": "^4.2.2",
    "p-queue": "^7.2.0",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@types/yargs": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "c8": "^7.10.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^10.0.0",
    "mocha": "^9.2.2",
    "mongodb-memory-server": "^8.0.2",
    "noop-stream": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.18",
    "typescript": "^4.4.4"
  }
}
