{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
      "stopOnEntry": false,
      "args": [
        "--config ${workspaceRoot}/.mocharc.json",
        "--file '${workspaceRoot}/test/helper/setup.ts'"
      ], //you can specify paths to specific tests here
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      // ./build/esm/cli.js init "mongodb://localhost:27017/" --force=true
      "name": "cli (esm)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/build/esm/bin/cli.js",
      "stopOnEntry": false,
      "args": [
        "init",
        // "-u=uuuuuuu",
        // "-c=ccccccc"
      ],
      "preLaunchTask": "npm: build",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
