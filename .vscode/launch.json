  "version": "0.2.0",
  "configurations": [
    {
      "name": "mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
      "stopOnEntry": false,
      "args": [
        "--config ${workspaceRoot}/.mocharc.json",
        "--file '${workspaceRoot}/test/helper/setup.ts'"
      ], //you can specify paths to specific tests here
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
